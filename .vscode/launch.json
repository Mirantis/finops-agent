{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Forecasting Agent",
            "type": "python",
            "request": "launch",
            "module": "src.main",
            "args": ["--config", "config.yaml"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
} 